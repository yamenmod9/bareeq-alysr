# Bareeq Al-Yusr - Environment Configuration
# Copy this file to .env and update values

# Application Environment
FLASK_ENV=development
DEBUG=True

# Database Configuration
# SQLite (Development)
DATABASE_URL=sqlite:///bareeq_alysr.db

# PostgreSQL (Production) - Uncomment when ready
# DATABASE_URL=postgresql://user:password@localhost:5432/bareeq_alysr

# SQL Query Logging
SQL_ECHO=False

# Security Keys (CHANGE IN PRODUCTION!)
SECRET_KEY=bareeq-alysr-secret-key-change-in-production-2026
JWT_SECRET_KEY=bareeq-alysr-jwt-secret-key-change-in-production-2026

# JWT Settings
JWT_EXPIRE_HOURS=24

# Business Rules
DEFAULT_CREDIT_LIMIT=2000.0
MAX_CREDIT_LIMIT=50000.0
AUTO_APPROVE_LIMIT=5000.0

# Commission Rate (0.5% = 0.005)
COMMISSION_RATE=0.005

# Purchase Request Expiry
REQUEST_EXPIRY_HOURS=24

# Default Repayment Days (for one-time payment)
DEFAULT_REPAYMENT_DAYS=10

# Rate Limiting
RATE_LIMIT=60

# Server Configuration
HOST=0.0.0.0
PORT=8000
